
{% block panel_body %}
<div class="row col-md-12 m-b">
    <div class="well well-lg">

        <p style="border-bottom:1px solid #000000;"><strong>VALIJAS PRESENTES EN LA FACTURA</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            {% for envio in envios %}
            {% if envio.estado.codigo == 'APP_ENVIO_ESTADO_RECIBIDA' %}

        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="panelenvio_{{envio.id}}">
                <label class="form-label">envio No. [{{ envio.cod_tracking }}] código [{{envio.codigo}}] en estado [{{ envio.estado.nombre }}] &nbsp; + &nbsp;
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{envio.id}}" aria-expanded="false" aria-controls="collapse{{envio.id}}" class="collapsed">
                        Irregularidades </a></label>
            </div>
        </div>
        {% else %}
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="panelenvio_{{envio.id}}">

                    <input class="form-check-input checkbox-envios" type="checkbox" value="{{envio.id}}" id="checkenvio_{{envio.id}}" checked>
                    <label class="form-label">Envio codigo [{{ envio.CodTracking }}] peso [{{envio.peso}}] en estado [{{ envio.estado.nombre }}] &nbsp; + &nbsp;
                        <a data-toggle="collapse" data-parent="#accordion" href="#ecollapse{{envio.id}}" aria-expanded="false" aria-controls="ecollapse{{envio.id}}" class="collapsed ecollapse{{envio.id}}">
                            Irregularidades </a></label>

                </div>
                <div id="ecollapse{{envio.id}}" class="panel-collapse collapse ecollapse{{envio.id}}" role="tabpanel" aria-labelledby="panelenvio_{{envio.id}}" aria-expanded="false">
                    <div class="panel-body" id="anomaliaslist{{envio.id}}">
                        {% for an in anomaliasE %}
                            <div class="col-md-12" style="margin-bottom: 10px;">
                                <div class="col-md-4">
                                    <input class="form-check-input check-anomalia {{an.codigo}}" type="checkbox" value="{{an.codigo}}" >
                                    <label class="form-label {{an.codigo}}">{{an.nombre}}</label>
                                </div>
                                <div class="col-md-8">
                                    <input class="form-control {{an.codigo}}" type="text" value="" id="{{envio.id}}_anomalia_{{an.codigo}}">
                                </div>
                            </div>
                        {% endfor %}
                        <div class="pull-right" style="margin-top: 25px;">
                            <button class="btn btn-primary" onclick="guardarAnomaliaEnvio('{{ envio.id }}')"><i class="fa fa-check"></i> Guardar </button>
                        </div>

                    </div>
                </div>
            </div>
        {% endif %}
        {% endfor %}
    </div>
</div>

    <p style="border-bottom:1px solid #000000;"><strong>RECEPCIÓN DE LOS ENVIOS</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <div class="row col-md-12 m-b">

        <div class="col-md-4">
            <button class="btn btn-primary" onclick="recepcionarSaca({{codTracking}})"><i class="fa fa-check"></i> Recepcionar valijas</button>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js',{ callback: 'fos.Router.setData' }) }}"></script>

    <script src="{{ asset('js/saca.js') }}"></script>

{% endblock %}
