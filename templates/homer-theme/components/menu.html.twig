{% block menu %}
    <!-- Navigation -->
    <aside id="menu">
        <div id="navigation">
            <!-- Profile -->
            <div class="profile-picture">
                <a href="#">
                    <img src="{{ asset('homer-theme/images/profile.png') }}" style="width: 70px" class="img-circle m-b"
                         alt="logo">
                </a>

                <div class="stats-label text-color">
                    <span class="font-extra-bold font-uppercase">{{ app.user.nombre }}</span>
                    <div class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                            <small class="text-muted">{{ app.user.cargo }} <b class="caret"></b></small>
                        </a>
                        <ul class="dropdown-menu animated flipInX m-t-xs">
                            <li><a href="{{ path('app_profile') }}">Perfil</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('app_logout') }}">Salir</a></li>
                        </ul>
                    </div>
                    <div id="sparkline1" class="small-chart m-t-sm">
                    </div>
                    <div>
                        <h4 class="font-extra-bold m-b-xs"></h4>
                        <small class="text-muted center">{{ app.user.estructura }}</small>
                    </div>
                </div>
            </div>

            <!-- Menu -->
            {{ knp_menu_render('main', {'allow_safe_labels': true}) }}
        </div>
    </aside>
{% endblock %}
