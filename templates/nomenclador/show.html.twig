{% extends 'base.html.twig' %}

{% block title %}Nomenclador{% endblock %}

{% block body %}
    <h1>Nomenclador</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Codigo</th>
                <td>{{ nomenclador.codigo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ nomenclador.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ nomenclador.descripcion }}</td>
            </tr>
            <tr>
                <th>Parametros</th>
                <td>{{ nomenclador.parametros ? nomenclador.parametros|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Habilitado</th>
                <td>{{ nomenclador.habilitado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ nomenclador.lft }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ nomenclador.rgt }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ nomenclador.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('nomenclador_index') }}">back to list</a>

    <a href="{{ path('nomenclador_edit', {'id': nomenclador.id}) }}">edit</a>

    {{ include('nomenclador/_delete_form.html.twig') }}
{% endblock %}
