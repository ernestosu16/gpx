{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <fieldset>
            <legend>{{ form_label(form.persona) }}</legend>
        </fieldset>
        {# @var fv \Symfony\Component\Form\FormView #}
        {% for fv in form.persona %}
            {% if fv.vars.name != '_token' %}
                <div class="form-group">
                    {{ form_label(fv) }}
                    <div class="col-sm-8">
                        {{ form_widget(fv) }}
                        {{ form_help(fv) }}
                        {{ form_errors(fv) }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <div class="form-group">
            {{ form_label(form.cargo) }}
            <div class="col-sm-8">
                {{ form_widget(form.cargo) }}
                {{ form_help(form.cargo) }}
                {{ form_errors(form.cargo) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.habilitado) }}
            <div class="col-sm-8">
                {{ form_widget(form.habilitado) }}
                {{ form_help(form.habilitado) }}
                {{ form_errors(form.habilitado) }}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <fieldset>
            <legend>Credenciales</legend>
        </fieldset>
        <div class="form-group">
            {{ form_label(form.credencial.usuario) }}
            <div class="col-sm-8">
                {{ form_widget(form.credencial.usuario) }}
                {{ form_help(form.credencial.usuario) }}
                {{ form_errors(form.credencial.usuario) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.credencial.contrasena.first) }}
            <div class="col-sm-8">
                {{ form_widget(form.credencial.contrasena.first) }}
                {{ form_help(form.credencial.contrasena.first) }}
                {{ form_errors(form.credencial.contrasena.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.credencial.contrasena.second) }}
            <div class="col-sm-8">
                {{ form_widget(form.credencial.contrasena.second) }}
                {{ form_help(form.credencial.contrasena.second) }}
                {{ form_errors(form.credencial.contrasena.second) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.estructura) }}
            <div class="col-sm-8">
                {{ form_widget(form.estructura) }}
                {{ form_help(form.estructura) }}
                {{ form_errors(form.estructura) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.grupos) }}
            <div class="col-sm-8">
                {{ form_widget(form.grupos) }}
                {{ form_help(form.grupos) }}
                {{ form_errors(form.grupos) }}
            </div>
        </div>
    </div>
</div>
<button class="btn btn-sm btn-success">{{ button_label|default('save'|trans({},'nomenclador')) }}</button>
<a class="btn btn-sm btn-default" href="{{ path('admin_trabajador_index') }}">{{ 'back to list'|trans({},'nomenclador') }}</a>
{{ form_errors(form) }}
{{ form_help(form) }}
{{ form_end(form) }}
