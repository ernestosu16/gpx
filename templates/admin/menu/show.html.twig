{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Codigo</th>
                <td>{{ menu.codigo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ menu.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ menu.descripcion }}</td>
            </tr>
            <tr>
                <th>Parametros</th>
                <td>{{ menu.parametros ? menu.parametros|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ menu.end ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Habilitado</th>
                <td>{{ menu.habilitado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ menu.lft }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ menu.rgt }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_index') }}">back to list</a>

    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('admin/menu/_delete_form.html.twig') }}
{% endblock %}
