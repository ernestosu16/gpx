{% if settings.routes.delete %}
    <form method="post" action="{{ path(settings.routes.delete, {'id': entity.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
        <button class="btn btn-sm btn-danger">{{ 'eliminar'|trans([],settings.translation_domain) }}</button>
    </form>
{% endif %}
